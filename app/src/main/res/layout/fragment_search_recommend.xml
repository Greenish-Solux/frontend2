<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_search_recommend_searchbox"
                android:layout_width="342dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_search_recommend_searchbox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SearchView
                android:id="@+id/sv_search_recommend_searchview"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:iconifiedByDefault="false"
                android:queryHint="어떤 식물 정보를 찾으세요?"
                app:iconifiedByDefault="false"
                app:queryHint="어떤 식물 정보를 찾으세요?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:closeIcon="@null"
                app:closeIcon="@null"
                app:searchHintIcon="@null"
                app:searchIcon="@null"
                android:searchHintIcon="@null"
                android:searchIcon="@null"
                app:submitBackground="@null"
                />

            <ImageView
                android:id="@+id/iv_search_recommend_searchglass"
                android:layout_width="24dp"
                android:layout_height="22.4dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="43dp"
                android:src="@drawable/ic_search_recommend_searchglass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_filter"
                android:layout_width="30.25dp"
                android:layout_height="30.25dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="34dp"
                android:src="@drawable/ic_search_recommend_filter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <TextView
                android:id="@+id/tv_search_recommend_text1"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/prebold"
                android:text="따뜻한 실내 추천 식물"
                android:textColor="#525252"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_search_recommend_text1_2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="189dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/prebold"
                android:text="(15°C 이상)"
                android:textColor="@color/Greenish_darkgrey"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant1"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_search_recommend1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant2"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="198dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_search_recommend2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant3"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/ic_search_recommend3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant4"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="198dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/ic_search_recommend4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <TextView
                android:id="@+id/tv_search_recommend_text2"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/prebold"
                android:text="추운 실내 추천 식물"
                android:textColor="#525252"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_search_recommend_text2_2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="174dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/prebold"
                android:text="(0°C 이상)"
                android:textColor="@color/Greenish_darkgrey"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant5"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_search_recommend5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant6"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="198dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_search_recommend6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant7"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/ic_search_recommend7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search_recommend_plant8"
                android:layout_width="162dp"
                android:layout_height="162dp"
                android:layout_marginStart="198dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/ic_search_recommend8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>