<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/iv_ranking_bar"
                android:layout_width="66dp"
                android:layout_height="4dp"
                android:layout_marginStart="291dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_mypage_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:background="#5AC479"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_ranking_text1"
                        android:layout_width="135dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="131dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/prebold"
                        android:gravity="center_vertical|start"
                        android:text="월간 물주기 리그"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_ranking_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="148dp"
                        android:layout_marginTop="58dp"
                        android:fontFamily="@font/premedium"
                        android:gravity="center_vertical|start"
                        android:text="이번달 명예 식집사!"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_ranking_main1"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginStart="134dp"
                        android:layout_marginTop="109dp"
                        android:src="@drawable/ic_ranking_main1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_ranking_main1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="165dp"
                        android:layout_marginTop="229dp"
                        android:fontFamily="@font/prebold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_ranking_main3"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="275dp"
                        android:layout_marginTop="129dp"
                        android:src="@drawable/ic_ranking_main3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_ranking_main3"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="283dp"
                        android:layout_marginTop="209dp"
                        android:fontFamily="@font/prebold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_ranking_main2"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="129dp"
                        android:src="@drawable/ic_ranking_main2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_ranking_main2"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="209dp"
                        android:fontFamily="@font/prebold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="96dp">

            <TextView
                android:id="@+id/tv_ranking_text3"
                android:layout_width="125dp"
                android:layout_height="36dp"
                android:layout_marginStart="137dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/prebold"
                android:gravity="center"
                android:text="이번주 명예 식집사!"
                android:textColor="#5AC479"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_ranking_text4"
                android:layout_width="157dp"
                android:layout_height="36dp"
                android:layout_marginStart="121dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/premedium"
                android:gravity="center"
                android:text="이번주 가장 식물을 잘 키운 집사는?"
                android:textColor="#929292"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRankingResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/myRankingContainer"
            android:layout_width="match_parent"
            android:layout_height="293px"
            android:background="#5AC479"
            android:orientation="horizontal"
            android:padding="13dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/rankingIcon"
                android:layout_width="155px"
                android:layout_height="wrap_content"
                android:src="@drawable/ranking_logo_under20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myRankingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/premedium"
                        android:text="이번주 내 랭킹은 "
                        android:textColor="@color/Greenish_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/myRankingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Greenish_white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="128" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/premedium"
                        android:text="위 에요:("
                        android:textColor="@color/Greenish_white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prebold"
                        android:text="앱파민"
                        android:textColor="@color/Greenish_white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/premedium"
                        android:text="님의 이번주 기록은 "
                        android:textColor="@color/Greenish_white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prebold"
                        android:text="5"
                        android:textColor="@color/Greenish_white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/premedium"
                        android:text="회 ... 더 분발해주세요"
                        android:textColor="@color/Greenish_white"
                        android:textSize="12sp" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#5AC479"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>