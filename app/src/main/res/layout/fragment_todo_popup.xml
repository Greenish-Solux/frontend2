<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="220dp"
    android:background="@color/Greenish_white">

    <TextView
        android:id="@+id/tv_poptodo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/premedium"
        android:text="식물 달력 편집"
        android:textColor="@color/Greenish_black"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/iv_poptodo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_poptodo_title"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_water" />

    <EditText
        android:id="@+id/tv_poptodo_editText"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_below="@id/tv_poptodo_title"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_poptodo_icon"
        android:background="@drawable/edittext"
        android:fontFamily="@font/premedium"
        android:gravity="top"
        android:hint="내용 입력"
        android:padding="10dp"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_poptodo_cancel"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_poptodo_editText"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_r100_green_line"
        android:fontFamily="@font/premedium"
        android:text="취소"
        android:textColor="@color/Greenish_green"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_poptodo_done"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_poptodo_editText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/bt_poptodo_cancel"
        android:background="@drawable/bg_r100_green_fill"
        android:fontFamily="@font/premedium"
        android:stateListAnimator="@null"
        android:text="완료"
        android:textColor="@color/Greenish_white"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/bt_poptodo_done"
        android:layout_marginTop="10dp"
        android:background="@color/Greenish_white" />

</RelativeLayout>