<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/prebold"
                android:text="홈화면"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/iv_home_bookmark_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="220dp"
                android:src="@drawable/ic_book_empty" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Greenish_lightgrey" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_r10_gray_line">

                        <TextView
                            android:id="@+id/tv_home_date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_black"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/tv_home_week1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_home_weather1"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_fewclouds"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tv_home_maxTemp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28°C/34°C"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tv_home_humidity1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%/60%"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_r10_gray_line">

                        <TextView
                            android:id="@+id/tv_home_date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_black"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/tv_home_week2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tue"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_home_weather2"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_rain"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tv_home_maxTemp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27°C/33°C"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tv_home_humidity2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30%/60%"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_r10_gray_line">

                        <TextView
                            android:id="@+id/tv_home_date3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_black"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/tv_home_week3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_home_weather3"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_scatteredclouds"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tv_home_maxTemp3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26°C/33°C"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tv_home_humidity3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30%/10%"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_r10_gray_line">

                        <TextView
                            android:id="@+id/tv_home_date4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_black"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/tv_home_week4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thur"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_home_weather4"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_showerrain"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tv_home_maxTemp4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26°C/32°C"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tv_home_humidity4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%/60%"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_r10_gray_line">

                        <TextView
                            android:id="@+id/tv_home_date5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_black"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/tv_home_week5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fri"
                            android:fontFamily="@font/premedium"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_home_weather5"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_fewclouds"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tv_home_maxTemp5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26°C/34°C"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tv_home_humidity5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40%/20%"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/Greenish_lightgrey"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prebold"
            android:paddingStart="10dp"
            android:text="물주기 체크"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/rv_home_watercycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_sample3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prebold"
                    android:layout_gravity="center_horizontal"
                    android:text="씩씩이"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_sample1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prebold"
                    android:layout_gravity="center_horizontal"
                    android:text="싱싱이"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_sample4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prebold"
                    android:layout_gravity="center_horizontal"
                    android:text="노랑이"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</layout>