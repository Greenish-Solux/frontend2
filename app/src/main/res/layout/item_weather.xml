<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="weather"
            type="com.example.greenish.retrofit.TemperatureResponse" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_r10_gray_line">

            <TextView
                android:id="@+id/tv_home_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{weather.date}"
                app:formattedDate="@{weather.date}"
                android:fontFamily="@font/premedium"
                android:textColor="@color/Greenish_black"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_home_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dayOfWeek="@{weather.date}"
                android:fontFamily="@font/premedium"
                android:textColor="@color/Greenish_lightgrey"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_home_weather"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_home_maxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`Max Temp: ${weather.maxTemp}Â°C`}"
                android:textColor="@color/Greenish_lightgrey"
                android:textSize="14sp"
                android:paddingEnd="5dp"/>

            <TextView
                android:id="@+id/tv_home_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`Humidity: ${weather.humidity}%`}"
                android:paddingStart="5dp"
                android:textColor="@color/Greenish_lightgrey"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout></layout>