<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPage.SignUpActivity">

    <ImageView
        android:id="@+id/back_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:src="@drawable/ic_login_before"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login4_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:src="@drawable/ic_login_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login4_line"
        app:layout_constraintVertical_bias="0.404">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_login_sprout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/prebold"
            android:gravity="center"
            android:text="식집사님,"
            android:textColor="@color/Greenish_black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/prebold"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="#5AC479"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prebold"
                android:gravity="center"
                android:text="을 완료해주세요!"
                android:textColor="@color/Greenish_black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/premedium"
            android:text="닉네임" />

        <EditText
            android:id="@+id/editUserName"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:paddingLeft="20dp"
            android:textColorHint="#C2C3C7"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/premedium"
            android:text="이메일" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:paddingLeft="20dp"
            android:textColorHint="#C2C3C7"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/premedium"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:paddingLeft="20dp"
            android:textColorHint="#C2C3C7"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/premedium"
            android:text="비밀번호 재확인" />

        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:paddingLeft="20dp"
            android:textColorHint="#C2C3C7"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_r10_green_fill"
            android:fontFamily="@font/premedium"
            android:text="가입하기"
            android:textColor="@color/Greenish_white"
            android:textSize="18dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>