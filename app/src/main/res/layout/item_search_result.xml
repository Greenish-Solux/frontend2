<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_search_result_box"
        android:layout_width="342dp"
        android:layout_height="126dp"
        android:src="@drawable/ic_search_result_box"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_search_result_image"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/ic_search_result"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_result_title"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginStart="145dp"
        android:fontFamily="@font/premedium"
        android:textColor="#525252"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@id/iv_search_result_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_search_result_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/premedium"
        android:textColor="#525252"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_search_result_title"
        app:layout_constraintTop_toBottomOf="@id/tv_search_result_title"
         />

    <TextView
        android:id="@+id/tv_search_result_description2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/premedium"
        android:textColor="#525252"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_search_result_title"
        app:layout_constraintTop_toBottomOf="@id/tv_search_result_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>